<img src="/images/background.jpg" class="background"/>
<div class="view">
  <img src="/images/cat.png" class="cat" />
</div>
<div class="actions">
  <div class="div-wrap">
    <form method="POST">
      <table class="space">
        <thead></thead>
        <tbody>
          <tr>
            <td><input class="btn btn-default btn-large" name="work" type="submit" value="Work!"><input class="btn btn-default btn-upgrade" name="work-upgrade" value="+" type="submit"></td>
            <td><input class="btn btn-default btn-large" name="toy" type="submit" value="Toy!"><input class="btn btn-default btn-upgrade" name="toy-upgrade" value="+" type="submit"></td>
            <td><input class="btn btn-default btn-large" name="treat" type="submit" value="Treat!"><input class="btn btn-default btn-upgrade" name="treat-upgrade" value="+" type="submit"></td>
          </tr>
        </tbody>
      </table>
      <table>
        <thead></thead>
        <tbody>
          <tr>
            <td><input class="btn btn-default btn-large" name="cuddle" type="submit" value="Cuddle!"><input class="btn btn-default btn-upgrade" name="cuddle-upgrade" value="+" type="submit"></td>
            <td><input class="btn btn-default btn-large" name="milk" type="submit" value="Milk!"><input class="btn btn-default btn-upgrade" name="milk-upgrade" value="+" type="submit"></td>
            <td><input class="btn btn-default btn-large" name="cafe" type="submit" value="Cat Cafe!" disabled><input class="btn btn-default btn-upgrade" name="gen-url" value="+" type="submit" disabled></td>
          </tr>
        </tbody>
      </table>
    </form>
  </div>


  <div class="stats div-wrap">
    <div class="stat-name"><h1 id="cat-name">{{name}}</h1><img src="/images/paw_prints.png" class="img-small" /></div>
    <table>
      <thead></thead>
      <tbody>
        <tr class="stat" id="mood">
          <td class="stat-label"><p class="stat-label">Mood</p></td> 
          <td class="stat-text">{{mood}}</td>
        </tr>
        <tr class="stat" id="hunger">
          <td class="stat-label"><p class="stat-label">Hunger</p></td>
          <td class="stat-progress">
            <div class="progress">
              <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="{{hunger}}" aria-valuemin="0" aria-valuemax="100" style="width: {{hunger}}%">
              </div>
            </div>
          </td>
        </tr>
        <tr class="stat" id="thirst">
          <td class="stat-label"><p class="stat-label">Thirst</p></td>
          <td class="stat-progress">
            <div class="progress">
              <div class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar" aria-valuenow="{{thirst}}" aria-valuemin="0" aria-valuemax="100" style="width: {{thirst}}%">
              </div>
            </div>
          </td>
        </tr>
        <tr class="stat" id="energy">
          <td class="stat-label"><p class="stat-label">Energy</p></td>
          <td class="stat-progress">
            <div class="progress">
              <div class="progress-bar progress-bar-warning progress-bar-striped active" role="progressbar" aria-valuenow="{{energy}}" aria-valuemin="0" aria-valuemax="100" style="width: {{energy}}%">
              </div>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="div-wrap">
    <table>
      <thead></thead>
      <tbody>
        <tr class="gold-row">
          <td class="stat-label"><div class="gold-label"><p class="stat-label"><img src="/images/gold.png" class="img-gold"> Gold</div></td>
          <td class="gold-count"><div class="gold-count">{{gold}}</div></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>